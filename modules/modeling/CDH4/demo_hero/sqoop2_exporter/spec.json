{
    "Name": "sqoop2_exporter",
    "Description": "Create sqoop2 job to export data from hdfs path.",
    "Version": "0.1",
    "CategoryTags": [
        "project_match",
        "CDH4"
     ],
    "Cmd": "python main.py",
    "Param": {
        "Sqoop2Server_Host": {
            "Default": "$Sqoop2Server_Host",
            "Type": "string"
        },
        "Sqoop2Server_Port": {
            "Default": "$Sqoop2Server_Port",
            "Type": "string"
        },
        "connection_string": {
            "Default": "$connection_string",
            "Type": "string"
        },
        "connection_username": {
            "Default": "$connection_username",
            "Type": "string"
        },
        "connection_password": {
            "Default": "$connection_password",
            "Type": "string"
        },
        "table_name": {
            "Default": "",
            "Type": "string"
        }
    },
    "Input": {
        "hdfs_path": [
            "hdfs.directory"
        ]
    },
    "Output": {}
}
