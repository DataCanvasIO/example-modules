{
    "Name": "ds2hivetable_converter",
    "Description": "Map a hdfs directiry to a table in hive.",
    "Version": "0.1",
    "CategoryTags": [],
    "Cmd": "python main.py",
    "Param": {
        "hdfs_root": {
            "Default": "$hdfs_root",
            "Type": "string"
        },
        "HiveServer2_Host": {
            "Default": "$HiveServer2_Host",
            "Type": "string"
        },
        "HiveServer2_Port": {
            "Default": "$HiveServer2_Port",
            "Type": "string"
        },
        "FILE_DIR": {
            "Default": "./resources/files",
            "Type": "string"
        },
        "UDF_DIR": {
            "Default": "./resources/udfs",
            "Type": "string"
        },
        "SCHEMA": {
            "Default": "",
            "Type": "string"
        }
    },
    "Input": {
        "input": [
            "datasource.hdfs"
        ]
    },
    "Output": {
        "output": [
            "hive.table"
        ]
    }
}
